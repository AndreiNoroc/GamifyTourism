<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@android:color/white">
    <TextView
        android:id="@+id/text_username"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
